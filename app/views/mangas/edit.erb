<h1>Manga Library Database</h1>
<br>
<h4>Edit Manga</h4>
<br>
<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>
<form action="/mangas/<%= @manga.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="title">Title:</label>
    <input type="text" name="manga[title]" value="<%= @manga.title %>"><br><br>
    <label for="issue">Issue Number:</label>
    <input type="number" min="0" name="manga[issue]" value="<%= @manga.issue %>"><br><br>
    <label for="publisher">Publisher:</label>
    <select name="manga[publisher]" value="<%= @manga.publisher %>">
        <option value="DC">DC</option>
        <option value="Marvel">Marvel</option>
        <option value="Image">Image</option>
        <option value="Dark Horse">Dark Horse</option>
        <option value="IDW">IDW</options>
        <option value="DC Vertigo">DC Vertigo</options>
        <option value="Boom Studios">Boom Studios</options>
        <option value="Valiant">Valiant</options>
        <option value="Dynamite">Dynamite</options>
        <option value="Oni Press">Oni Press</options>
        <option value="Other">Other</options>
    </select>
    <br><br>
    <label for="arc">Story Arc:</label>
    <input type="text" name="manga[arc]" value="<%= @manga.arc %>"><br><br>
    <label for="writer">Writer(s):</label>
    <input type="text" name="manga[writer]" value="<%= @manga.writer %>"><br><br>
    <label for="artist">Artist(s):</label>
    <input type="text" name="manga[artist]" value="<%= @manga.artist %>"><br><br>
    <label for="rating">Rating:</label>
    <select name="manga[rating]" value="<%= @manga.rating %>">
        <option value="10">10 - Masterpiece</option>
        <option value="9">9 - Incredible</option>
        <option value="8">8 - Great</option>
        <option value="7">7 - Very Good</option>
        <option value="6">6 - Pretty Good</option>
        <option value="5">5 - Okay</option>
        <option value="4">4 - Not Great</option>
        <option value="3">3 - Bad</option>
        <option value="2">2 - Terrible</option>
        <option value="1">1 - An Abomination</option>
        <option value="Not Read">N/A - Not Yet Read</option>
    </select>
    <br><br>
    <label for="review">Review/Summary:</label><br>
    <textarea name="manga[review]"><%= @manga.review %></textarea><br><br>
    <input type="submit" name="submit" value="Finalize Edits"> 
</form><br>
<a href="/users/<%= @manga.user_id %>"><h3>Return Home</h3></a>